
<div class="nested-fields mb-4 p-4 border rounded-lg bg-gray-50">
  <div class="grid grid-cols-12 gap-4">
    <div class="col-span-5">
      <%= form.text_field :name, class: "w-full rounded border-gray-300" %>
    </div>
    <div class="col-span-5">
      <%= form.text_field :quantity, class: "w-full rounded border-gray-300" %>
    </div>
    <div class="col-span-2">
      <%= link_to "#", 
                  data: { action: "nested-form#remove" }, 
                  class: "text-red-500 hover:text-red-700" do %>
        Remove
      <% end %>
      <%= form.hidden_field :_destroy %>
    </div>
  </div>
</div>
<div class="bg-gradient-to-r from-blue-500 to-indigo-600 py-6 mb-10 shadow-lg">
  <div class="max-w-3xl mx-auto flex items-center justify-between px-4">
    <h1 class="text-3xl font-extrabold text-white tracking-tight">Recipe Book</h1>
    <%= link_to 'New Recipe', new_recipe_path, class: "inline-block px-5 py-2 bg-white text-blue-600 font-semibold rounded shadow hover:bg-gray-100 transition" %>
  </div>
</div>

<div class="max-w-3xl mx-auto py-4">
  <% @recipes.each do |recipe| %>
    <div class="bg-white rounded-xl shadow-lg p-8 mb-10 border border-gray-100 hover:shadow-2xl transition">
      <h2 class="text-2xl font-bold mb-3 text-gray-800 flex items-center">
        <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4l3 3"></path><circle cx="12" cy="12" r="10"></circle></svg>
        <%= recipe.title %>
      </h2>
      <h3 class="text-lg font-semibold text-gray-600 mb-2">Ingredients</h3>
      <ul class="list-disc list-inside mb-5 text-gray-700 space-y-1">
        <% recipe.ingredients.each do |ingredient| %>
          <li>
            <span class="font-medium"><%= ingredient.name %></span>
            <span class="text-gray-500">- <%= ingredient.quantity %></span>
          </li>
        <% end %>
      </ul>
      <h3 class="text-lg font-semibold text-gray-600 mb-2">Instructions</h3>
      <p class="mb-6 text-gray-700 whitespace-pre-line"><%= recipe.instructions %></p>
      <div class="flex space-x-4">
        <%= link_to 'Edit', edit_recipe_path(recipe), class: "inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition" %>
        <%= link_to 'Show', recipe, class: "inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition" %>
        <%= link_to 'Delete', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition" %>
      </div>
    </div>
  <% end %>
</div>
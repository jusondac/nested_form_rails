<header class="bg-gradient-to-r from-blue-500 to-indigo-600 py-6 mb-10 shadow-lg text-white flex justify-between items-center px-6 rounded-t-xl">
  <div class="text-white">
    <h1 class="text-3xl font-semibold ">Recipe <%= @recipe.title %></h1>
  </div>
  <div>
    <%= link_to "Back to Recipes", recipes_path, class: "inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" %>
  </div>
</header>
<div style="max-width: 800px; margin: 0 auto; background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
  <h2 style="color: #2c3e50;"><%= @recipe.title %></h2>
  <p style="font-size: 1.1em; color: #555;"><%= @recipe.instructions %></p>
  <h3 style="margin-top: 30px; color: #2c3e50;">Ingredients</h3>
  <ul style="list-style: disc inside; padding-left: 0;">
    <% @recipe.ingredients.each do |ingredient| %>
      <li style="margin-bottom: 8px;">
        <strong><%= ingredient.name %></strong>: <%= ingredient.quantity %>
      </li>
    <% end %>
  </ul>
  <div style="margin-top: 30px; display: flex; gap: 10px;">
    <%= link_to 'Edit Recipe', edit_recipe_path(@recipe), class: 'btn', style: 'background: #3498db; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none;' %>
    <%= link_to 'All Recipes', recipes_path, class: 'btn', style: 'background: #95a5a6; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none;' %>
  </div>
</div>